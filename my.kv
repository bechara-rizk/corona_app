<MyGrid>:


    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 1

            canvas:
                Color: 
                    rgb: [0.1,0.1,0.1]
                Rectangle: 
                    pos: self.pos
                    size: self.size

            Label:
                id: update_date
                text: "Last Update: "
                color: 1,1,1,1
                font_size: 40


        GridLayout:
            cols: 1

            canvas:
                Color: 
                    rgb: [0,0,0]
                Rectangle: 
                    pos: self.pos
                    size: self.size

            Label:
                text: "Daily Cases"
                color: 1,1,1,1
                font_size: 40

            Label:
                text: "XX"
                color: 1,1,1,1
                font_size: 80
                id: daily_cases

            Label:
                text: "Tests: "
                color: 1,1,1,1
                font_size: 40
                id: tests

        GridLayout:
            cols: 2

            canvas:
                Color: 
                    rgb: [0.1,0.1,0.1]
                Rectangle: 
                    pos: self.pos
                    size: self.size

            Label:
                text: "Locals"
                color: 1,1,1,1
                font_size: 40

            Label:
                text: "Arrivals"
                color: 1,1,1,1
                font_size: 40

            Label:
                text: "XX"
                color: 1,1,1,1
                font_size: 80
                id: locals_cases

            Label:
                text: "XX"
                color: 1,1,1,1
                font_size: 80
                id: arrivals_cases

        GridLayout:
            cols: 2

            canvas:
                Color: 
                    rgb: [0,0,0]
                Rectangle: 
                    pos: self.pos
                    size: self.size

            Label:
                text: "Total cases"
                color: 1,1,1,1
                font_size: 40

            Label:
                text: "Locals: "
                color: 1,1,1,1
                font_size: 40
                id: total_locals_box

            Label:
                text: "XX"
                color: 1,1,1,1
                font_size:80
                id: total_cases_box

            Label:
                text: "Arrivals: "
                color: 1,1,1,1
                font_size: 40
                id: total_arrivals_box

        GridLayout:
            cols: 2

            canvas:
                Color: 
                    rgb: [0.1,0.1,0.1]
                Rectangle: 
                    pos: self.pos
                    size: self.size

            Label:
                text: "Active Cases"
                color: 1,1,1,1
                font_size: 40

            Label:
                text: "Total Deaths"
                color: 1,1,1,1
                font_size: 40

            Label:
                text: "XX"
                color: 1,1,1,1
                font_size: 80
                id: active_cases_box

            Label:
                text: "XX"
                color: 1,1,1,1
                font_size: 80
                id: deaths_box

        GridLayout:
            cols: 1

            canvas:
                Color: 
                    rgb: [0,0,0]
                Rectangle: 
                    pos: self.pos
                    size: self.size

            Label:
                text: "Recovered Cases"
                color: 1,1,1,1
                font_size: 40

            Label:
                text: "XX"
                color: 1,1,1,1
                font_size: 80
                id: reco_cases_box

        GridLayout:
            cols: 1

            canvas:
                Color: 
                    rgb: [0.1,0.1,0.1]
                Rectangle: 
                    pos: self.pos
                    size: self.size

            Label:
                text: "Lockdown Cases"
                color: 1,1,1,1
                font_size: 40

            Label:
                text: "XX"
                color: 1,1,1,1
                font_size: 80
                id: lockdown_cases_box

        GridLayout:
            cols: 1

            Button:
                id: button_change
                text: "Refresh"
                color: 1,1,1,1
                font_size: 80
                background_color: 0.2,0.2,0.2,1
                background_down: "1,1,1,1"
                on_press: root.change_text()
